<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.chenhao.simpleapp.ui.dialog.TrafficYuZhiDialogFragment">

    <include layout="@layout/layout_toolbar_title" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">


        <TextView
            android:id="@+id/item_t1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="当前最小阈值："
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="#000"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/item_t2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            android:text="10"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="#000"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">


        <TextView
            android:id="@+id/item_t3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="当前最大阈值："
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="#000"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/item_t4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            android:text="90"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="#000"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:singleLine="true"
        android:text="确定"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textSize="18sp" />

</LinearLayout>
