<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_black_line"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试数据"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/item_t3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="测试数据"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_t4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="测试数据"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textSize="12sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_t5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="测试数据"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_t2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/background_black_oval"
            android:gravity="center"
            android:text="测试数据"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

    </LinearLayout>
</LinearLayout>